<div class="c-table">
    <div class="table-responsive table-stripered ctable-hijo">
        <table id="table_id" class="display">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Grupo de artículos</th>
                    <th>Código de material</th>
                    <th>Descripción</th>
                    <th>Fecha de caducidad</th>
                    <th>Cantidad disponible</th>
                    <th>Precio (Lps.)</th>
                    <th>Lote</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GrupoArticulos)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.COD_Material)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td id="caducidad">
                            @Html.DisplayFor(modelItem => item.Fecha_Cad)
                        </td>
                        <td class="text-right" >
                            @Html.DisplayFor(modelItem => item.Cantidad_Disponible)
                        </td>
                        <td class="text-right">
                            @Html.DisplayFor(modelItem => item.Precio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TBL_Material_X_Almacen.Lote)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>


