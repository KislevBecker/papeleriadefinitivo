    <div class="panel panel-default">
        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt>
                    Código
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MATNR)
                </dd>

                <dt>
                    Descripción
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MAKTX)
                </dd>

                <dt>
                    Sociedad
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Sociedad)
                </dd>

                <dt>
                    Centro
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Centro)
                </dd>

                <dt>
                    Centro de Costo
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ceco)
                </dd>

                <dt>
                    Almacén
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Almacen)
                </dd>

                <dt>
                    Cantidad solicitada
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Cantidad_Solicitada)
                </dd>

                <dt>
                    Cantidad aprobada
