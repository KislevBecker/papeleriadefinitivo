                <dd>
                    @Html.DisplayFor(model => model.Fecha_Solicitud)
                </dd>

                <dt>
                    Fecha de revisión
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Fecha_Cambio_Estado)
                </dd>

                <dt>
                    Solicitante
