@model ProgramaDeRequisas.Models.TBL_Materiales_X_Sociedad

@{
    ViewBag.Title = "Agregar nuevo Material";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @*<h4>TBL_Materiales_X_Sociedad</h4>*@
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-row">
        <label><span class="badge badge-pill badge-secondary">1</span> Ingrese La información referente al material:</label>
    </div>

    <div class="row">
        <div class="col-md-4">
            <label class="text-primary col-md-12 mt-2">Grupo de artículo</label>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Grupo_Articulos, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Grupo_Articulos, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <label class="text-primary col-md-12 mt-2">Código del material</label>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Codigo_material, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Codigo_material, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <label class="text-primary col-md-12 mt-2">Descripción</label>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label class="text-primary col-md-12 mt-2">Fecha de caducidad o preferente consumo</label>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.FechaCaducidad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FechaCaducidad, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <label class="text-primary col-md-12 mt-2">Precio (lps.) </label>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="form-row mt-2">
        <label><span class="badge badge-pill badge-secondary">2</span> Seleccione Centro y Almacén</label>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label class="text-primary col-md-12">Centro</label>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.DropDownList("ID_Centro", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_Centro, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <label class="text-primary col-md-12">N° de almacén</label>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownList("ID_Almacen", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_Almacen, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="form-row mt-2">
        <label><span class="badge badge-pill badge-secondary">3</span> Ingrese N° de lote y N° de lote de proveedor</label>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label class="text-primary col-md-12">Lote</label>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Lote, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Lote, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <label class="text-primary col-md-12">Lote del proveedor</label>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Lote_Proveedor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Lote_Proveedor, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>


    <div class="form-row mt-2">
        <label><span class="badge badge-pill badge-secondary">4</span> Ingrese las siguientes cantidades:</label>
    </div>

    <div class="row">
        <div class="col-md-4">
            <label class="text-primary col-md-12"> Para libre utilización</label>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Libre_utilizacion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Libre_utilizacion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <label class="text-primary col-md-12"> Para control de calidad</label>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Control_Calidad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Control_Calidad, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <div class="col-md-4">
            <label class="text-primary col-md-12"> Para transporte/traslado</label>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Trans_Tras, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Trans_Tras, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <label class="text-primary col-md-12"> Valor libre utilización</label>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Valor_Libre_Util, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Valor_Libre_Util, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <label class="text-primary col-md-12"> Pendiente</label>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Pendiente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Pendiente, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <input type="button" id="Registrar2" value="Guardar material" class="btn btn-success" />
            <input type="submit" id="Registrar" value="Iniciar" class="btn btn-success" hidden />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar a lista de materiales", "Index")
</div>
