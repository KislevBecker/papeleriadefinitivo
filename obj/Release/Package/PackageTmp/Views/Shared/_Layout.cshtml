<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Requisa de materiales</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    @*para sweetalert*@
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    {@ViewBag.Title = }
</head>
<body>
    <div class="navbar navbar-light navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle  text-primary" data-toggle="collapse" data-target=".navbar-collapse">
                    <i class="fas fa-bars fa-2x"></i>
                </button>
                @Html.ActionLink("Inicio", "Dashboard", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="navbarText">
                <ul class="nav navbar-nav mr-auto">
                    <li>@Html.ActionLink("Historial de requisas", "Index", "VSP_Sociedades_Centros_Almacenes")</li>
                    @*<li><a href="@Url.Action("AgregarCarrito", "MaterialesAgregados")"><i class="fas fa-shopping-cart"></i> <span class="badge badge-pill badge-primary">Ver Artículos agregados</span></a></li>*@
                    @*<li><a href="@Url.Action("Index", "TBL_Carrito")" title="Ver carrito"><i class="fas fa-shopping-cart"></i> <span class="badge badge-pill badge-primary">Ver Artículos agregados</span></a></li>*@
                    @if (User.Identity.IsAuthenticated)
                    {
                        @*<li>@Html.ActionLink("Revisar requisas", "Index", "RevisionRequisas")</li>*@
                        <li class="nav-item dropdown">
                            <div class="dropdown mt-1">
                                <button class="btn btn-light dropdown-toggle text-primary" type="button" data-toggle="dropdown">
                                    Administración
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">@Html.ActionLink("Autorización de requisas", "Index", "TBL_RevisionMat_Agregados")</a></li>
                                    <li><a class="dropdown-item" href="#">@Html.ActionLink("Gestionar usuarios", "Index", "TBL_UsuariosSolicitantes")</a></li>
                                    @*<li><a href="#">JavaScript</a></li>*@
                                </ul>
                            </div>
                        </li>

                    }
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-outline-danger btn-right mt-1" onclick="userLogOff()"><i class="fas fa-sign-out-alt"></i> Cerrar sesión</a>
                }
            </div>
            <hr />
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

    </div>
    <footer class="border-top text-muted">
        <hr />
        <div class="container">
            <div class="text-center mb-3">
                Copyright &copy;
                <script>new Date().getFullYear() > document.write(new Date().getFullYear());</script> - Requisa de materiales
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    function userLogOff() {
        location.replace("/Home/Logout");
    }
</script>