@*@model IEnumerable<ProgramaDeRequisas.Models.TBL_UsuariosSolicitantes>*@
@model IEnumerable<ProgramaDeRequisas.Models.ClsUsuariosSolicitantes>


@{
    ViewBag.Title = "Lista de usuarios Papelería";
}

@*datatables*@
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">


<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Crear nuevo usuario", "Create")
</p>
@*<div class="c-table">*@
<div class="table-responsive table-stripered ctable-hijo">
    <table id="table_id" class="display">
        <thead>
            <tr>
                <th>
                    Solicitante
                </th>
                <th>
                    Contraseña
                </th>
                <th>
                    Estado
                </th>
                <th>
                    Sociedad
                </th>
                <th>
                    Centro
                </th>
                <th>
                    Almacén
                </th>
                <th>
                    CeCo
                </th>
                <th>
                    Tipo de solicitante
                </th>
                <th>
                    Rol
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombreSolicitante)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.pass)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreSociedad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCentro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID_Almacen)
                    </td>
                    <td class="text-uppercase">
                        @Html.DisplayFor(modelItem => item.Nombre_CECO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoSolicitante)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rol)
                    </td>
                    <td>
                        <div class="btn-group-vertical">
                            @Html.ActionLink("Editar", "Edit", new { id = item.ID })
                            <br />
                            @*@Html.ActionLink("Detalles", "Details", new { id = item.ID })
                        <br />*@
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>

    @*para iniciar el datatable*@
    <script>
        $(document).ready(function () {
            $('#table_id').DataTable({
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registros por página",
                    "zeroRecords": "Datos no encontrados",
                    "info": "Mostrando Página _PAGE_ de _PAGES_",
                    "infoEmpty": "No hay registros disponibles",
                    "infoFiltered": "(Filtrado de _MAX_ registros totales)",
                    "search": "Buscar",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                }
            });
        });
    </script>
}

